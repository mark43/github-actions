{
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
      },
      "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": false
      },
      "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
      },
      "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": false
      },
      "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
          "autoFix": true,
          "language": "typescript"
        },
        {
          "autoFix": true,
          "language": "typescriptreact"
        }
      ],
      "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
      },
}